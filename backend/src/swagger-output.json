{
  "swagger": "2.0",
  "info": {
    "title": "APAN API",
    "description": "Documentação da API de backend do projeto APAN (para treinadores e atletas).",
    "version": "1.0.0"
  },
  "host": "localhost:3001",
  "basePath": "/v1",
  "schemes": [
    "http",
    "https"
  ],
  "securityDefinitions": {
    "cookieAuth": {
      "type": "apiKey",
      "in": "cookie",
      "name": "connect.sid"
    }
  },
  "paths": {
    "/v1/auth/signup": {
      "post": {
        "tags": [
          "Autenticação"
        ],
        "summary": "Cria uma nova conta de treinador no sistema.",
        "description": "",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "$ref": "#/definitions/SignUpDTO"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Usuário criado com sucesso.",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "400": {
            "description": "E-mail já cadastrado."
          }
        }
      }
    },
    "/v1/auth/login": {
      "post": {
        "tags": [
          "Autenticação"
        ],
        "summary": "Autentica um treinador e inicia uma sessão.",
        "description": "",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "$ref": "#/definitions/LoginDTO"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Login bem-sucedido.",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "401": {
            "description": "Credenciais inválidas."
          }
        }
      }
    },
    "/v1/auth/logout": {
      "post": {
        "tags": [
          "Autenticação"
        ],
        "summary": "Encerra a sessão do treinador logado.",
        "description": "",
        "responses": {
          "200": {
            "description": "Logout bem-sucedido."
          },
          "401": {
            "description": "Não autenticado."
          }
        },
        "security": [
          {
            "session": []
          }
        ]
      }
    },
    "/v1/auth/me": {
      "get": {
        "tags": [
          "Autenticação"
        ],
        "summary": "Retorna os dados do treinador atualmente logado.",
        "description": "",
        "responses": {
          "200": {
            "description": "Dados do usuário.",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "401": {
            "description": "Não autenticado."
          },
          "404": {
            "description": "Usuário da sessão não encontrado."
          }
        },
        "security": [
          {
            "session": []
          }
        ]
      }
    },
    "/v1/atletas/": {
      "post": {
        "tags": [
          "Atletas"
        ],
        "summary": "Cria um novo atleta para o treinador logado.",
        "description": "",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "$ref": "#/definitions/CreateAtletaDTO"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Atleta criado."
          }
        },
        "security": [
          {
            "session": []
          }
        ]
      },
      "get": {
        "tags": [
          "Atletas"
        ],
        "summary": "Lista todos os atletas do treinador logado.",
        "description": "",
        "responses": {
          "200": {
            "description": "Lista de atletas."
          }
        },
        "security": [
          {
            "session": []
          }
        ]
      }
    },
    "/v1/atletas/{id}": {
      "get": {
        "tags": [
          "Atletas"
        ],
        "summary": "Busca um atleta específico (e suas classificações).",
        "description": "",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "ID do Atleta"
          }
        ],
        "responses": {
          "200": {
            "description": "Dados do atleta."
          },
          "404": {
            "description": "Atleta não encontrado ou não pertence ao usuário."
          }
        },
        "security": [
          {
            "session": []
          }
        ]
      },
      "put": {
        "tags": [
          "Atletas"
        ],
        "summary": "Atualiza dados de um atleta (nome, nascimento).",
        "description": "",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "$ref": "#/definitions/UpdateAtletaDTO"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Atleta atualizado."
          },
          "404": {
            "description": "Atleta não encontrado ou não pertence ao usuário."
          }
        },
        "security": [
          {
            "session": []
          }
        ]
      },
      "delete": {
        "tags": [
          "Atletas"
        ],
        "summary": "Deleta um atleta e todo seu histórico (em cascata).",
        "description": "",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": {
            "description": "Atleta deletado."
          },
          "404": {
            "description": "Atleta não encontrado ou não pertence ao usuário."
          }
        },
        "security": [
          {
            "session": []
          }
        ]
      }
    },
    "/v1/atletas/{id}/classificacoes": {
      "post": {
        "tags": [
          "Atletas"
        ],
        "summary": "Associa uma classificação paralímpica a um atleta.",
        "description": "",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "ID do Atleta"
          },
          {
            "name": "body",
            "in": "body",
            "schema": {
              "$ref": "#/definitions/AssociateClassificacaoDTO"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Associação criada."
          },
          "404": {
            "description": "Atleta ou Classificação não encontrados."
          }
        },
        "security": [
          {
            "session": []
          }
        ]
      }
    },
    "/v1/atletas/{id}/classificacoes/{classificacaoId}": {
      "delete": {
        "tags": [
          "Atletas"
        ],
        "summary": "Remove uma classificação de um atleta.",
        "description": "",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "ID do Atleta"
          },
          {
            "name": "classificacaoId",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "ID da Classificação"
          }
        ],
        "responses": {
          "204": {
            "description": "Associação removida."
          },
          "404": {
            "description": "Associação não encontrada ou não pertence ao usuário."
          }
        },
        "security": [
          {
            "session": []
          }
        ]
      }
    },
    "/v1/avaliacoes/": {
      "post": {
        "tags": [
          "Avaliações"
        ],
        "summary": "Registra uma nova avaliação de desempenho para um atleta.",
        "description": "",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "$ref": "#/definitions/CreateAvaliacaoDTO"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Avaliação registrada."
          },
          "400": {
            "description": "Dados inválidos (validação Joi)."
          },
          "403": {
            "description": "Atleta não pertence ao treinador."
          }
        },
        "security": [
          {
            "session": []
          }
        ]
      },
      "get": {
        "tags": [
          "Avaliações"
        ],
        "summary": "Lista o histórico de avaliações de um atleta, com filtros.",
        "description": "Busca o histórico de um atleta. O ?atletaId=uuid é obrigatório nos query params.",
        "parameters": [
          {
            "name": "atletaId",
            "in": "query",
            "required": true,
            "type": "string",
            "description": "ID do Atleta (obrigatório)"
          },
          {
            "name": "modalidadeId",
            "in": "query",
            "type": "string",
            "description": "Filtrar por ID da modalidade"
          },
          {
            "name": "tipo",
            "in": "query",
            "enum": [
              "PRE_TREINO",
              "POS_TREINO"
            ],
            "description": "Filtrar por tipo de sessão",
            "type": "string"
          },
          {
            "name": "dataInicio",
            "in": "query",
            "type": "string",
            "format": "date",
            "description": "Data inicial (YYYY-MM-DD)"
          },
          {
            "name": "dataFim",
            "in": "query",
            "type": "string",
            "format": "date",
            "description": "Data final (YYYY-MM-DD)"
          }
        ],
        "responses": {
          "200": {
            "description": "Histórico de avaliações."
          },
          "403": {
            "description": "Atleta não pertence ao treinador."
          }
        },
        "security": [
          {
            "session": []
          }
        ]
      }
    },
    "/v1/dados-auxiliares/classificacoes": {
      "get": {
        "tags": [
          "Dados Auxiliares"
        ],
        "summary": "Lista todas as Classificações Paralímpicas (do seed).",
        "description": "",
        "responses": {
          "200": {
            "description": "Lista de classificações (ex: T11, F40)."
          }
        },
        "security": [
          {
            "session": []
          }
        ]
      }
    },
    "/v1/dados-auxiliares/modalidades": {
      "get": {
        "tags": [
          "Dados Auxiliares"
        ],
        "summary": "Lista todas as Modalidades esportivas (do seed).",
        "description": "",
        "responses": {
          "200": {
            "description": "Lista de modalidades (ex: 100m Rasos, Salto em Distância)."
          }
        },
        "security": [
          {
            "session": []
          }
        ]
      }
    },
    "/v1/dados-auxiliares/modalidades/{id}/metricas": {
      "get": {
        "tags": [
          "Dados Auxiliares"
        ],
        "summary": "Lista quais métricas (Tempo, Distância) uma Modalidade exige.",
        "description": "Endpoint \"mágico\" da Tela 2. Retorna os campos que o frontend deve renderizar.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "ID da Modalidade"
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de tipos de métrica (ex: [ { nome: \"Distância\" }, { nome: \"Velocidade do Vento\" } ])."
          },
          "404": {
            "description": "Modalidade não encontrada."
          }
        },
        "security": [
          {
            "session": []
          }
        ]
      }
    }
  },
  "definitions": {
    "SignUpDTO": {
      "type": "object",
      "properties": {
        "nomeCompleto": {
          "type": "string",
          "example": "Treinador Teste"
        },
        "email": {
          "type": "string",
          "example": "treinador@teste.com"
        },
        "password": {
          "type": "string",
          "example": "Password@123"
        }
      }
    },
    "LoginDTO": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "example": "treinador@teste.com"
        },
        "password": {
          "type": "string",
          "example": "Password@123"
        }
      }
    },
    "SanitizedUser": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "example": "uuid-user-1"
        },
        "nomeCompleto": {
          "type": "string",
          "example": "Treinador Teste"
        },
        "email": {
          "type": "string",
          "example": "treinador@teste.com"
        },
        "createdAt": {
          "type": "string",
          "example": "2025-11-04T10:00:00.000Z"
        },
        "updatedAt": {
          "type": "string",
          "example": "2025-11-04T10:00:00.000Z"
        }
      }
    },
    "CreateAtletaDTO": {
      "type": "object",
      "properties": {
        "nomeCompleto": {
          "type": "string",
          "example": "João Silva"
        },
        "dataNascimento": {
          "type": "string",
          "example": "2000-01-10"
        }
      }
    },
    "UpdateAtletaDTO": {
      "type": "object",
      "properties": {
        "nomeCompleto": {
          "type": "string",
          "example": "João Silva Atualizado"
        },
        "dataNascimento": {
          "type": "string",
          "example": "2000-01-10"
        }
      }
    },
    "AssociateClassificacaoDTO": {
      "type": "object",
      "properties": {
        "classificacaoId": {
          "type": "string",
          "example": "uuid-classificacao-t11"
        }
      }
    },
    "AtletaDetalhado": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "example": "uuid-atleta-1"
        },
        "nomeCompleto": {
          "type": "string",
          "example": "João Silva"
        },
        "dataNascimento": {
          "type": "string",
          "example": "2000-01-10T00:00:00.000Z"
        },
        "usuarioId": {
          "type": "string",
          "example": "uuid-user-1"
        },
        "createdAt": {
          "type": "string",
          "example": "2025-11-04T10:00:00.000Z"
        },
        "updatedAt": {
          "type": "string",
          "example": "2025-11-04T10:00:00.000Z"
        },
        "classificacoes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "example": "uuid-class-1"
              },
              "codigo": {
                "type": "string",
                "example": "T11"
              },
              "descricao": {
                "type": "string",
                "example": "Deficiência visual total"
              }
            }
          }
        }
      }
    },
    "ResultadoMetricaDTO": {
      "type": "object",
      "properties": {
        "tipoMetricaId": {
          "type": "string",
          "example": "uuid-metrica-tempo"
        },
        "valor": {
          "type": "number",
          "example": 12.5
        }
      }
    },
    "CreateAvaliacaoDTO": {
      "type": "object",
      "properties": {
        "atletaId": {
          "type": "string",
          "example": "uuid-atleta-1"
        },
        "modalidadeId": {
          "type": "string",
          "example": "uuid-modalidade-100m"
        },
        "tipo": {
          "type": "string",
          "example": "PRE_TREINO"
        },
        "observacoes": {
          "type": "string",
          "example": "Pista molhada"
        },
        "dataHora": {
          "type": "string",
          "example": "2025-11-04T10:00:00.000Z"
        },
        "resultados": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ResultadoMetricaDTO"
          }
        }
      }
    },
    "RegistroAvaliacaoCompleto": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "example": "uuid-registro-1"
        },
        "atletaId": {
          "type": "string",
          "example": "uuid-atleta-1"
        },
        "modalidadeId": {
          "type": "string",
          "example": "uuid-modalidade-100m"
        },
        "tipo": {
          "type": "string",
          "example": "PRE_TREINO"
        },
        "observacoes": {
          "type": "string",
          "example": "Pista molhada"
        },
        "dataHora": {
          "type": "string",
          "example": "2025-11-04T10:00:00.000Z"
        },
        "createdAt": {
          "type": "string",
          "example": "2025-11-04T10:00:00.000Z"
        },
        "updatedAt": {
          "type": "string",
          "example": "2025-11-04T10:00:00.000Z"
        },
        "modalidade": {
          "type": "object",
          "properties": {
            "nome": {
              "type": "string",
              "example": "100m Rasos"
            },
            "categoria": {
              "type": "string",
              "example": "Corrida"
            }
          }
        },
        "resultados": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "example": "uuid-resultado-1"
              },
              "tipoMetricaId": {
                "type": "string",
                "example": "uuid-metrica-tempo"
              },
              "valor": {
                "type": "number",
                "example": 12.5
              },
              "createdAt": {
                "type": "string",
                "example": "2025-11-04T10:00:00.000Z"
              },
              "updatedAt": {
                "type": "string",
                "example": "2025-11-04T10:00:00.000Z"
              },
              "tipoMetrica": {
                "type": "object",
                "properties": {
                  "nome": {
                    "type": "string",
                    "example": "Tempo"
                  },
                  "unidadeMedida": {
                    "type": "string",
                    "example": "s"
                  }
                }
              }
            }
          }
        }
      }
    },
    "Classificacao": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "example": "uuid-class-1"
        },
        "codigo": {
          "type": "string",
          "example": "T11"
        },
        "descricao": {
          "type": "string",
          "example": "Deficiência visual total"
        }
      }
    },
    "Modalidade": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "example": "uuid-modalidade-100m"
        },
        "nome": {
          "type": "string",
          "example": "100m Rasos"
        },
        "categoria": {
          "type": "string",
          "example": "Corrida"
        }
      }
    },
    "TipoMetrica": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "example": "uuid-metrica-tempo"
        },
        "nome": {
          "type": "string",
          "example": "Tempo"
        },
        "unidadeMedida": {
          "type": "string",
          "example": "s"
        }
      }
    },
    "ErrorAuth": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string",
          "example": "E-mail ou senha inválidos."
        }
      }
    },
    "ErrorValidation": {
      "type": "object",
      "properties": {
        "fieldErrors": {
          "type": "object",
          "properties": {
            "email": {
              "type": "string",
              "example": "E-mail já cadastrado."
            }
          }
        }
      }
    }
  }
}